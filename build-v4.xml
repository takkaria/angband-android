<?xml version="1.0" encoding="UTF-8"?>
<project name="Angbandv4" default="v4-debug">

    <target name="v4-debug"   depends="plugin-resources, debug" />

<!--
    ************************************************************************
    *                                                                      *
    *  Plugins                                                             *
    *                                                                      *
    ************************************************************************
-->

    <target name="plugin-resources">
	<ant inheritAll="true" antfile="plugin/build.xml" target="plugin-resources">
	    <property name="plugin.name" value="v4"/>
	    <property name="pluginzip.name" value="v4"/>
	</ant>
    </target>

    <target name="-post-compile">
	  <ant inheritAll="true" antfile="plugin/build.xml" target="angband-javah">
	  </ant>

	  <ant inheritAll="true" antfile="plugin/build.xml" target="plugin-lib">
	    <property name="plugin.name" value="loader"/>
	    <property name="pluginlib.name" value="loader-v4"/>
	  </ant>
	  <ant inheritAll="true" antfile="plugin/build.xml" target="plugin-lib">
	    <property name="plugin.name" value="v4"/>
	    <property name="pluginlib.name" value="v4"/>
	  </ant>
    </target>

<!--
    ************************************************************************
    *                                                                      *
    *  Android SDK Setup, etc                                              *
    *                                                                      *
    ************************************************************************
-->

	<!-- version-tag: 1 -->
	<import file="${sdk.dir}/tools/ant/build.xml" />

</project>
